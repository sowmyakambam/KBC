<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/amountWonText"
        android:text="You Won: Rs.___________ "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:background="#ff4a1976"/>

    <ImageView
        android:src="@drawable/kbc_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff9c6ed1"
        android:scaleType="center"
        android:layout_marginBottom="0dp" />

    <TextView
        android:text="Question:_______"
        android:maxLines="2"
        android:id="@+id/questionTextView"
        android:verticalScrollbarPosition="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@android:color/white"
        android:textSize="32sp"

        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:background="#dd4a1976"/>
    <TextView
        android:text="Option A "
        android:id="@+id/optionATextView"
        android:layout_weight="0.7"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:onClick="myClickHandler"
        android:paddingRight="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:background="#ff4a1976"/>
    <TextView
        android:text="Option B "
        android:id="@+id/optionBTextView"
        android:clickable="true"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:onClick="myClickHandler"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:background="#ee4a1976"/>
    <TextView
        android:text="Option C"
        android:id="@+id/optionCTextView"
        android:clickable="true"
        android:onClick="myClickHandler"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:background="#ff4a1976"/>
    <TextView
        android:text="Option D"
        android:id="@+id/optionDTextView"
        android:clickable="true"
        android:onClick="myClickHandler"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:background="#ee4a1976"

         />

</LinearLayout>